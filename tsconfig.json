{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}